<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="qafoo_blog.blog_controller" class="Qafoo\BlogBundle\Controller\BlogController">
            <argument type="service" id="ezpublish.view_manager" />
            <argument type="service" id="security.context" />

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>

            <call method="addTypeHandler">
                <argument>17</argument>
                <argument type="service" id="qafoo_blog.blog_location_handler" />
            </call>

            <call method="addTypeHandler">
                <argument>18</argument>
                <argument type="service" id="qafoo_blog.blog_post_location_handler" />
            </call>
        </service>

        <service id="qafoo_blog.blog_location_handler" class="Qafoo\BlogBundle\Controller\BlogLocationHandler">
            <argument type="service" id="ezpublish.api.service.search" />
        </service>

        <service id="qafoo_blog.blog_post_location_handler" class="Qafoo\BlogBundle\Controller\BlogPostLocationHandler">
        </service>
    </services>
</container>
